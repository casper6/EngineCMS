Options -Indexes +FollowSymLinks
DirectorySlash off

#Разрешаем выполнения Rewrite_mod 
RewriteEngine On

#Устанавливаем начальный адрес преобразования
RewriteBase /

#Опция настройки страниц ошибок 403, 404 и 500. Можно добавить другие ошибки.
ErrorDocument 403 ?name=-error&code=403
ErrorDocument 404 ?name=-error&code=404
ErrorDocument 500 ?name=-error&code=500

#Запрещения доступа к выбранным файлам
RewriteRule ^.htaccess$ - [F]

#Опция позволяет блокировать пользователей либо роботов по адресу, маске или диапазону адресов ip
#RewriteCond %{REMOTE_ADDR} ^217.0.0.1|127.0.0.1|10.0.0|10.0.0.([10-200]*)$
#RewriteRule ^.*$ [R=404]

#Опция заставляющая сервер принудительно отправлять браузеру данные в нужной кодировке 
AddDefaultCharset utf-8

# Время жизни статичных файлов в кеше
<IfModule mod_expires.c>
   ExpiresActive on
   ExpiresByType image/gif "access plus 50 days"
   ExpiresByType image/jpeg "access plus 50 days"
   ExpiresByType image/png "access plus 50 days"
   ExpiresByType text/css "access plus 10 days"
   ExpiresByType text/javascript "access plus 10 days"
   ExpiresDefault "access plus 10 hours"
</IfModule>

#Опция настройки вывода ошибок выполнения скрипов (2047 => 4096)
php_value error_reporting 4096

# Запись лога ошибок
#php_flag log_errors On
#php_value error_log err.log

# Запрет отображения ошибок
php_flag display_errors Off
php_flag ignore_repeated_errors On
php_flag ignore_repeated_source On

# Запрет «волшебных» кавычек
php_flag magic_quotes_gpc 0
php_flag magic_quotes_runtime 0

# Запрет глобальных переменных
php_flag register_globals Off

# Защита от дурака
RewriteRule ^admin/ /
RewriteRule ^red/ /

# Администрирование сайта
RewriteRule ^admin sys.php
RewriteRule ^red sys.php

# RSS-канал
RewriteRule ^rss rss.php

# Правила обратного (теневого) преобразования
#############################################
RewriteRule ^--slovo_([а-яА-Яa-zA-Z0-9%+-]*) ?name=-slovo&slovo=$1
RewriteRule ^--search ?name=-search
RewriteRule ^--email ?name=-email
RewriteRule ^-([а-яА-Яa-zA-Z0-9_-]*)_addbase_([0-9]*) ?go=addbase&name=$1&spa=$2
RewriteRule ^-([а-яА-Яa-zA-Z0-9_-]*)_first_([A-F0-9+_|-]*)_second_([A-F0-9+_|-]*)_opt_([0-9]*) ?name=$1&go=showcat&first=$2&second=$3&option=$4
RewriteRule ^-([а-яА-Яa-zA-Z0-9_-]*)_first_([A-F0-9+_|-]*)_opt_([0-9]*) ?name=$1&go=showcat&first=$2&option=$3
RewriteRule ^-([а-яА-Яa-zA-Z0-9_-]*)_date_([0-9-]*) ?name=$1&go=showdate&showdate=$2
RewriteRule ^-([а-яА-Яa-zA-Z0-9_-]*)_cat_([0-9]*)_slovo_([a-zA-Z0-9%+-]*) ?name=$1&go=showcat&cid=$2&slovo=$3
RewriteRule ^-([а-яА-Яa-zA-Z0-9_-]*)_cat_([0-9]*)_page_([0-9]*) ?name=$1&go=showcat&cid=$2&pag=$3
RewriteRule ^-([а-яА-Яa-zA-Z0-9_-]*)_cat_([0-9]*) ?name=$1&go=showcat&cid=$2
RewriteRule ^-([а-яА-Яa-zA-Z0-9_-]*)_page_([0-9]*)_com_([0-9]*) ?name=$1&go=page&pid=$2&com=$3
RewriteRule ^-([а-яА-Яa-zA-Z0-9_-]*)_page_([0-9]*)_comm ?name=$1&go=page&pid=$2&comm=ok
RewriteRule ^-([а-яА-Яa-zA-Z0-9_-]*)_page_([0-9]*) ?name=$1&go=page&pid=$2
RewriteRule ^-([а-яА-Яa-zA-Z0-9_-]*)_slovo_([a-zA-Z0-9%+-]*) ?name=$1&go=showcat&slovo=$2
RewriteRule ^-([а-яА-Яa-zA-Z0-9_-]*) ?name=$1
RewriteRule ^css_([0-9-]*)_add_([a-z0-9_-]*).css combine.php?type=css&files=$1&add=$2
RewriteRule ^css_([0-9-]*).css combine.php?type=css&files=$1